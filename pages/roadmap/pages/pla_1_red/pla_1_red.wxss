/* pages/roadmap/pages/pla_1_red/pla_1_red.wxss */
@import "../../../common/common.wxss";

.ctn {
  height: 100vh; /* make sure scroll-top can work */
}

.float {
  padding: 16rpx;
  background-color: rgba(245, 245, 245, 0.7);
}

.zoom-panel {
  display: flex;
  justify-content: start;
  align-items: center;
  top: 32rpx;
  right: 24rpx;
}

.zoom-panel .label {
  font-weight: bold;
}

.zoom-button {
  max-width: 48rpx;
  max-height: 48rpx;
  padding: 0 8rpx;
}

.picker-panel {
  display: flex;
  justify-content: start;
  align-items: center;
  bottom: 64rpx;
  left: 24rpx;
}

.picker-adapt {
  height: 40rpx;
  line-height: 40rpx;
}

.picker-column {
  width: 160rpx;
}

.picker-item {
  font-weight: bold;
}

.debug-panel {
  display: flex;
  justify-content: start;
  align-items: center;
  bottom: 144rpx;
  left: 24rpx;
}

.debug-input {
  width: 100rpx;
}

.debug-button {
  margin-left: 16rpx;
}