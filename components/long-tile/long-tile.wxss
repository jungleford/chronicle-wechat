/* components/long-tile/long-tile.wxss */
.container {
  position: relative;
}

.tile {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 160rpx;
  margin-bottom: 24rpx;
  padding: 4rpx;
  border: 1rpx solid black;
  /*border-radius: 8rpx;
  box-shadow: 0 2rpx 0 0 rgba(black, 0.08);*/
}

.tile-image {
  width: 100%;
  height: 100%;
}

.banner {
  position: absolute;
  top: 40rpx;
  left: 0;
  width: calc(100% + 8rpx);
  height: 80rpx;
}

.frosted {
  opacity: 0.5;
}

.title {
  background-color: transparent;
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: stretch;
  padding: 16rpx;
}

.text {
  font-size: 32rpx;
  font-weight: bold;
  font-family: 华文行楷;
}