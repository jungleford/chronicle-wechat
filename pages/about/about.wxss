/* pages/about/about.wxss */
@import "../common/common.wxss";

.paragraph {
  width: 100%;
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.paragraph text {
  width: 100%;
}

.list.item-content .highlight {
  color: red;
}

.sub-title {
  margin-bottom: 20rpx;
}

.sub-title, .paragraph .list.item-title {
  color: blue;
  font-weight: bold;
}

.paragraph .list.item-content {
  width: 90%;
  margin-left: 32rpx;
}

.paragraph .list.sub-item {
  width: 80%;
  margin-left: 64rpx;
}